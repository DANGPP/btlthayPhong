<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_allday_todo"
    android:layout_width="280dp"
    android:layout_height="140dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginVertical="8dp"
    
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Task ID, Category, and Star -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Task ID Badge -->
            <TextView
                android:id="@+id/txt_task_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_label"
                android:backgroundTint="#F3E5F5"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="#7B1FA2"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="Task #234" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Category Badge -->
            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_label"
                android:backgroundTint="#FFF3E0"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="#F57C00"
                android:textSize="11sp"
                android:textStyle="bold"
                android:text="Workout" />

            <!-- Star Priority -->
            <ImageView
                android:id="@+id/icon_star"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_star"
                android:tint="#FFC107"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Task Title -->
        <TextView
            android:id="@+id/txt_todo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:text="Daily Gym Reminder" />

        <!-- Additional Info Row: Priority, Duration, Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Priority Badge -->
            <TextView
                android:id="@+id/txt_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_label"
                android:backgroundTint="#FFEBEE"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="#D32F2F"
                android:textSize="9sp"
                android:textStyle="bold"
                android:text="HIGH"
                android:layout_marginEnd="8dp" />

            <!-- Duration Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_timer"
                    android:tint="#999999" />

                <TextView
                    android:id="@+id/txt_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="9sp"
                    android:text="60m" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_label"
                android:backgroundTint="#E3F2FD"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="#1976D2"
                android:textSize="9sp"
                android:textStyle="bold"
                android:text="IN PROGRESS" />

        </LinearLayout>

        <!-- Bottom Row: Date/Time and Avatars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|bottom"
            android:layout_gravity="bottom">

            <!-- Date/Time with Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_time"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_schedule"
                    android:tint="#666666" />

                <TextView
                    android:id="@+id/txt_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:text="15 OCT 2022 08:00 AM" />

            </LinearLayout>

            <!-- Right Side: Avatars and Attachment -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Avatars Container -->
                <LinearLayout
                    android:id="@+id/layout_avatars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/avatar1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="-8dp"
                        android:background="@drawable/bg_circle"
                        android:src="@drawable/ic_profile"
                        android:scaleType="centerCrop"
                        android:elevation="2dp" />

                    <ImageView
                        android:id="@+id/avatar2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="-8dp"
                        android:background="@drawable/bg_circle"
                        android:src="@drawable/ic_profile"
                        android:scaleType="centerCrop"
                        android:elevation="1dp" />

                    <TextView
                        android:id="@+id/txt_more_count"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="#E0E0E0"
                        android:gravity="center"
                        android:textColor="#666666"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:text="+2"
                        android:elevation="0dp" />

                </LinearLayout>

                <!-- Attachment Icon -->
                <ImageView
                    android:id="@+id/icon_attachment"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_attachment"
                    android:tint="#666666"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>