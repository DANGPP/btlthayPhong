<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_day_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Status Indicator -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="#2196F3" />

        <!-- Task Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/txt_task_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Daily Gym Reminder" />

                <TextView
                    android:id="@+id/txt_task_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    tools:text="08:00 AM" />

            </LinearLayout>

            <!-- Category and Priority Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/txt_task_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_category_label"
                    android:backgroundTint="#FFF3E0"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textColor="#F57C00"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    tools:text="Workout" />

                <TextView
                    android:id="@+id/txt_task_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_category_label"
                    android:backgroundTint="#FFEBEE"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textColor="#D32F2F"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="HIGH" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_task_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    tools:text="60m" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/txt_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="Don't forget your workout routine"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Status Button -->
        <ImageView
            android:id="@+id/btn_task_status"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_check_circle"
            android:tint="#999999"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>