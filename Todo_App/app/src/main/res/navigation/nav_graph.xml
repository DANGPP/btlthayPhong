<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.noteapp.fragment.HomeFragment"
        android:label="NoteApp"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_showNoteFragment"
            app:destination="@id/showNoteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchViewFragment"
            app:destination="@id/searchViewFragment" />
        <action
            android:id="@+id/action_homeFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.noteapp.fragment.AddNoteFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_add_note" >
        <action
            android:id="@+id/action_addNoteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/showNoteFragment"
        android:name="com.example.noteapp.fragment.ShowNoteFragment"
        android:label="Note Detail"
        tools:layout="@layout/fragment_show_note" >
        <action
            android:id="@+id/action_showNoteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="note"
            app:argType="com.example.noteapp.model.Note" />
        <action
            android:id="@+id/action_showNoteFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment"
           />
    </fragment>
    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.noteapp.fragment.EditNoteFragment"
        android:label="Edit Note"
        tools:layout="@layout/fragment_edit_note" >
        <action
            android:id="@+id/action_editNoteFragment_to_showNoteFragment"
            app:destination="@id/showNoteFragment"
            app:popUpTo="@id/showNoteFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="note"
            app:argType="com.example.noteapp.model.Note" />
    </fragment>
    <fragment
        android:id="@+id/searchViewFragment"
        android:name="com.example.noteapp.fragment.SearchViewFragment"
        android:label="fragment_search_view"
        tools:layout="@layout/fragment_search_view" >
        <action
            android:id="@+id/action_searchViewFragment_to_showNoteFragment"
            app:destination="@id/showNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.noteapp.fragment.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.noteapp.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_calendarFragment"
            app:destination="@id/calendarFragment" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.noteapp.fragment.LoginFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_calendarFragment"
            app:destination="@id/calendarFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.noteapp.fragment.RegisterFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_calendarFragment"
            app:destination="@id/calendarFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    
    <!-- Main App Fragments -->
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.noteapp.fragment.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar" >
        <action
            android:id="@+id/action_calendarFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    
    <fragment
        android:id="@+id/toDoFragment"
        android:name="com.example.noteapp.fragment.ToDoFragment"
        android:label="Todo"
        tools:layout="@layout/fragment_to_do" >
        <action
            android:id="@+id/action_toDoFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    
    <fragment
        android:id="@+id/pomodoroFragment"
        android:name="com.example.noteapp.fragment.PomodoroFragment"
        android:label="Pomodoro"
        tools:layout="@layout/fragment_pomodoro" >
        <action
            android:id="@+id/action_pomodoroFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    
    <fragment
        android:id="@+id/smartScheduleFragment"
        android:name="com.example.noteapp.fragment.SmartScheduleFragment"
        android:label="AI Schedule"
        tools:layout="@layout/fragment_smart_schedule" >
        <action
            android:id="@+id/action_smartScheduleFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.noteapp.fragment.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" >
        <action
            android:id="@+id/action_statisticsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    
    <fragment
        android:id="@+id/workspaceFragment"
        android:name="com.example.noteapp.ui.WorkspaceFragment"
        android:label="Workspaces"
        tools:layout="@layout/fragment_workspace" >
        <action
            android:id="@+id/action_workspaceFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_workspaceDetails_to_workspaceBoard"
            app:destination="@id/workspaceBoardFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/workspaceBoardFragment"
        android:name="com.example.noteapp.ui.WorkspaceBoardFragment"
        android:label="Board View"
        tools:layout="@layout/fragment_workspace_board" >
        <argument
            android:name="workspaceId"
            app:argType="string" />
        <action
            android:id="@+id/action_workspaceBoard_to_memberTasks"
            app:destination="@id/memberTasksFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/memberTasksFragment"
        android:name="com.example.noteapp.ui.MemberTasksFragment"
        android:label="Member Tasks"
        tools:layout="@layout/fragment_member_tasks" >
        <argument
            android:name="workspace_id"
            app:argType="string" />
        <argument
            android:name="user_id"
            app:argType="string" />
        <argument
            android:name="user_name"
            app:argType="string" />
    </fragment>
    
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.example.noteapp.ui.ProfileEditFragment"
        android:label="Chỉnh Sửa Thông Tin"
        tools:layout="@layout/fragment_profile_edit" />

</navigation>